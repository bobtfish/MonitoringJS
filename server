  sub new {
      my $class = shift;
      bless {@_}, $class;
  }
  
  sub run {
      my ($self, $app) = @_;
  
      my $class = $ENV{SERVER_STARTER_PORT} ?
          'Twiggy::Server::SS' : 'Twiggy::Server';
